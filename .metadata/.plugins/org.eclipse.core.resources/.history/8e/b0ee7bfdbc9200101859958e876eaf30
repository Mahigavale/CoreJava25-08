package loops;

public class Fourth {
	public static void main(String[] args) {
		
		
		
		
		  // 1=> 374 => even numbers =>(num %2==0)
		// ICBO
		
		
		// 1=> 50 => Summation
		int sum=0;//0+1+2+3+4+5
		// 1-5 =>0+2+4=>6
		   for(int num=1;num<=5;num++)
		   {
			  // sum=sum+num;
			  //1,2,3,4,5
			   if(num%2==0)
			   {
				   
				   sum=sum+num; //0+2+4
			   }
			 
		   }
		  
		   
		   System.out.println("EVEN SUMMATION:"+sum);
		

	}

}
